<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="my.app.browser">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name="my.app.browser.application.MyApp" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="my.app.browser.activities.CustomGallery" android:screenOrientation="portrait">

        </activity>

        <activity android:label="@string/app_name" android:name="my.app.browser.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

    </application>

</manifest>
